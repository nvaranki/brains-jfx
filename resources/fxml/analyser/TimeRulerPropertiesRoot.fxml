<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
    fx:controller="com.varankin.brains.jfx.analyser.TimeRulerPropertiesRootController" 
    styleClass="time-ruler-properties-root"
    xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/2.2">
    
  <stylesheets>
    <URL value="@TimeRulerPropertiesRoot.css"/>
  </stylesheets>
  
  <center>
      <fx:include source="TimeRulerPropertiesPane.fxml" fx:id="properties"/>
  </center>  
  
  <bottom>
    <HBox>
      <children>
        <Button 
            text="%button.ok" 
            onAction="#onActionOK" 
            defaultButton="true"
            fx:id="buttonOK"  
        />
        <Button 
            text="%button.cancel" 
            onAction="#onActionCancel" 
            cancelButton="true" 
        />
        <Button 
            text="%button.apply" 
            onAction="#onActionApply"
            fx:id="buttonApply"  
        />
      </children>
    </HBox>
  </bottom>
  
</BorderPane>
