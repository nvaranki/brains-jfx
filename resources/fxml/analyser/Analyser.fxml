<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane 
    fx:controller="com.varankin.brains.jfx.analyser.AnalyserController" 
    fx:id="pane" 
    styleClass="analyser"
    fitToWidth="true" 
    hbarPolicy="NEVER" 
    vbarPolicy="ALWAYS"  
    xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/2.2">
    
    <stylesheets>
        <URL value="@Analyser.css"/>
    </stylesheets>

    <contextMenu>
        <ContextMenu fx:id="popup" >
            <items>
                <MenuItem 
                    fx:id="menuItemAdd" 
                    text="%analyser.popup.add"  
                    onAction="#onActionAddTimeLine" 
                />  
            </items>
        </ContextMenu>        
    </contextMenu>
    
    <VBox 
        fx:id="box"
        fillWidth="true" 
        focusTraversable="true"
        visible="false" 
        >
        <children>
            <HBox 
                fx:id="buttonPanel" 
                alignment="CENTER_RIGHT" 
                >  
                <Button 
                    text="@analyzer.popup.add" 
                    onAction="#onActionAddTimeLine" 
                    />      
                <Button 
                    fx:id="buttonRemoveAll" 
                    text="@analyzer.popup.clean" 
                    onAction="#onActionRemoveAllTimeLines" 
                    />      
            </HBox>
        </children>
    </VBox>
    
</ScrollPane>
